 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <div class="media-body">
         <h2 class="media-heading">Welcome <%= @user.email %>!</h2>
         <small>
         </small>
       </div>
     </div>
   </div>
 </div>
 
 <h3>Incomplete Tasks</h3>
<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description</th>
              <th>Complete</th>
            </tr>
          </thead>

          <tbody>
            <tr class='js-items'>
              <%= render @user.items %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if current_user %>
      <div class='new-item'>
        <%= render 'items/form', item: Item.new, user: @user %>
      </div>
    <% end %>
  </div>
</div>
